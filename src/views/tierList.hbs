{{#*inline "tier"}}
    <div class="tier">
        <div class="tier-rank" id='{{ this.tier }}'>
            <h3 class='rank'>{{ this.tier }}</h3>
        </div>
        <div class="anime">
            {{> @partial-block}}
        </div>
    </div>
{{/inline}}

{{#*inline "tier-block" }}
    {{#if this.animes}}
        {{#> tier tier=this.tier}}
            {{#each this.animes}}
                <a href="{{this.url}}" target="_blank"><div class="thumbnail-container">
                <img class="thumbnail" src='{{this.image}}' loading="lazy"><div class="title-display">{{this.title}}</div></img></div></a>
            {{/each}}
        {{/tier}}
    {{/if}}
{{/inline}}

