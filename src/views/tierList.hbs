{{#*inline "tier"}}
    <div class="tier">
        <div class="tier-rank" id='{{ this.tier }}'>
            <h3 class='rank'>{{ this.tier }}</h3>
        </div>
        <div class="anime">
            {{> @partial-block}}
        </div>
    </div>
{{/inline}}

{{#*inline "tier-block" }}
    {{#if this.animes}}
        {{#> tier tier=this.tier}}
            {{#each this.animes}}
                <a href="{{this.url}}" target="_blank"><div class="thumbnail-container">
                <img class="thumbnail" src='{{this.image}}' loading="lazy"><div class="title-display">{{this.title}}</div></img></div></a>
            {{/each}}
        {{/tier}}
    {{/if}}
{{/inline}}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/css/style.css'>
    <title>Anime Tier List</title>
</head>
<body>
    <script src='/js/generateColors.js' type="module"></script>
    <div id="background" style="background:{{userProfile.userBackground}};background-size:cover;background-repeat:no-repeat;" ></div>
    <div id="container">
        {{#each this.animes}}
            {{> tier-block tier=@key animes=this}}
        {{/each}}
    </div>

</body>
</html>
